# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=travel_superapp
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OTP
OTP_LENGTH=6
OTP_EXPIRES_IN=300
OTP_RESEND_COOLDOWN=60

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Provider (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@travelsuperapp.com

# WhatsApp (Twilio)
TWILIO_WHATSAPP_NUMBER=

# Payment Gateway
PAYMENT_GATEWAY_URL=
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_SECRET=

# Flight Provider (Amadeus)
AMADEUS_API_KEY=
AMADEUS_API_SECRET=
AMADEUS_BASE_URL=https://test.api.amadeus.com

# RapidAPI - Flights Scraper Real-Time (for flights)
RAPIDAPI_KEY=your-rapidapi-key-here

# Hotel Provider (Hotelbeds)
HOTELBEDS_API_KEY=
HOTELBEDS_SECRET=
HOTELBEDS_BASE_URL=https://api.test.hotelbeds.com

# Visa Provider
VISA_PROVIDER_API_KEY=
VISA_PROVIDER_BASE_URL=

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=travel-superapp-documents

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# App Config
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8081
CORS_ORIGINS=http://localhost:8081,http://localhost:19006
